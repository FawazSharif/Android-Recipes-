<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fawaz2.recipe">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.fawaz2.recipe.Pages.SearchedMealPage"></activity>
        <activity android:name="com.fawaz2.recipe.Search.SelectIngredientActivity" />
        <activity android:name="com.fawaz2.recipe.Tutorial.TutorialActivity" />
        <activity android:name="com.fawaz2.recipe.Search.SearchedMealActivity" />
        <activity android:name="com.fawaz2.recipe.Activities.ShoppingListItemsActivity" />
        <activity android:name="com.fawaz2.recipe.Activities.ShoppingListActivity" />
        <activity android:name=".Search.RecipeSearchResultActivity" />
        <activity android:name="com.fawaz2.recipe.Search.RecipeSearchActivity" />
        <activity android:name="com.fawaz2.recipe.Pages.FaveRecipePageActivity" />
        <activity android:name="com.fawaz2.recipe.Activities.FavouritesActivity" />
        <activity android:name="com.fawaz2.recipe.Search.MealsByIngredients" />
        <activity android:name=".Search.IngredientsSearchActivity" />
        <activity android:name="com.fawaz2.recipe.Profile.ProfileActivity" />
        <activity android:name="com.fawaz2.recipe.Activities.LoadActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fawaz2.recipe.Activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.fawaz2.recipe.Profile.LoginActivity" />
        <activity android:name="com.fawaz2.recipe.Profile.RegisterActivity" />
        <activity android:name="com.fawaz2.recipe.Activities.YoutubeActivity" />
        <activity android:name=".Activities.SourceActivity" />
        <activity android:name="com.fawaz2.recipe.Pages.RecipeDetailsActivity" />
        <activity
            android:name="com.fawaz2.recipe.Activities.CategoryItemsActivity"
            android:label="CategoryItems"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fawaz2.recipe.Activities.CategoryActivity" />
        </activity>
        <activity
            android:name="com.fawaz2.recipe.Activities.CategoryActivity"
            android:launchMode="singleTop" />
    </application>

</manifest>